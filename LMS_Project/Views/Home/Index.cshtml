@{
    ViewBag.Title = "Home Page";
}

<nav class="side-panel col-md-3 col-sm-4 col-xs-9" ng-controller="NavigationController">
    <div class="row">
        <h5 class="col-xs-12 close-bottom">Menu</h5>

        <ul class="col-xs-12">
            <li class="col-xs-12">
                <a href="#" title="">
                    <i class="fa fa-user give-space-right center-icon transition" aria-hidden="true"></i>
                    <span>Profile</span>
                </a>
            </li>

            <li class="col-xs-12">
                <a href="#" title="">
                    <i class="fa fa-tasks give-space-right center-icon transition" aria-hidden="true"></i>
                    <span>My courses</span>
                </a>
            </li>

            <li class="col-xs-12">
                <a href="#" title="">
                    <i class="fa fa-calendar give-space-right center-icon transition" aria-hidden="true"></i>
                    <span>Schedule</span>
                </a>
            </li>

            <li class="col-xs-12">
                <a href="#" title="">
                    <i class="fa fa-cogs give-space-right center-icon transition" aria-hidden="true"></i>
                    <span>Settings</span>
                </a>
            </li>
        </ul>
    </div>

    <div class="row">
        <h5 class="col-xs-12 close-bottom">Looking for something?</h5>

        <form method="post" action="#" class="col-xs-12">
            <div class="form-group">
                <div class="input-group col-xs-12">
                    <div class="animated-search">
                        <input type="text" class="col-xs-12" name="search" onblur="this.value=''" ng-model="SearchText" />
                        <i class="fa fa-search" aria-hidden="true"></i>
                    </div>
                </div>
            </div>
        </form>
    </div>
</nav>

<div class="col-md-9 col-sm-8 col-xs-12">
    <div class="row theme-light">
        <!-- Render content in here -->
        <!--    FILE UPLOAD START  -->
        <div ng-controller="UploadController">
            File:
            <input type="file" ngf-select file-model="picFile" id="file" name="file" accept="image/*" ngf-max-size="2MB" required ngf-model-invalid="errorFile"><br />
            <img ngf-thumbnail="picFile" class="thumb">
            <br />
            <button ng-click="picFile = null" ng-show="picFile">Remove</button><br />
            <button type="button" class="btn btn-primary" ng-click="add()">Upload</button>
        </div>


        


        <!--    FILE UPLOAD END    -->

    </div>
</div>